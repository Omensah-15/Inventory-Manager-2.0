# InvyPro Environment Configuration
# Copy this file to .env and update values

# ======================
# Application Settings
# ======================
APP_ENV=production
SECRET_KEY=your-secret-key-change-this-in-production
APP_NAME=InvyPro Inventory Manager
APP_VERSION=2.0.0

# ======================
# Database Configuration
# ======================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=invypro
DB_USER=invypro_user
DB_PASSWORD=your-secure-database-password
DB_SSLMODE=disable

# ======================
# Security Settings
# ======================
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_MINUTES=15
PASSWORD_MIN_LENGTH=8

# ======================
# Application Settings
# ======================
DEFAULT_CURRENCY=USD
DEFAULT_TIMEZONE=UTC
ITEMS_PER_PAGE=50

# ======================
# Backup Settings
# ======================
AUTO_BACKUP=True
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=./backups

# ======================
# Email Settings (Optional)
# ======================
EMAIL_ENABLED=False
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@invypro.local

# ======================
# Logging Settings
# ======================
LOG_LEVEL=INFO
LOG_FILE=./logs/invypro.log

# ======================
# Feature Flags
# ======================
ENABLE_BARCODE_SCANNING=False
ENABLE_MULTI_WAREHOUSE=False
ENABLE_BATCH_TRACKING=False
ENABLE_EXPIRE_DATE_TRACKING=False
